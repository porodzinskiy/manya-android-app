<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Manya_v1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background = "#FF000000">


    <FrameLayout
        android:id="@+id/bt_frame"

        android:layout_width="328dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="198dp">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bt_list_white"


            android:entries="@array/bt_default_list"
            android:visibility="visible"
            tools:visibility="visible" />

        <View
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"


            android:background="@drawable/find_btn_icon"
            android:backgroundTint="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/rectangle_bt_list_white" />


    </FrameLayout>

    <FrameLayout
        android:backgroundTint="@color/white"
        android:id="@+id/bt_connect_auto_frame"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="338dp"
        android:background="@drawable/rectangle_bt_list">

        <Switch
            android:id="@+id/bt_auto_switch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:shadowColor="@color/white"
            android:gravity="center"
            android:text="Автоматическое подключение при старте"
            android:textSize="20dp" />
    </FrameLayout>

    <FrameLayout
        android:backgroundTint="@color/white"
        android:id="@+id/bt_connect_frame"
        style="@style/Theme.Manya_v1"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="268dp"
        android:background="@drawable/rectangle_bt_list">

        <TextView
            android:id="@+id/textView3"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="62dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ручное подключение к bluetooth-устройству"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_connect_btn"
            android:backgroundTint="@color/black"
            android:foregroundTint="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="6dp"
            android:foreground="@drawable/bt_connect_btn_icon"
            android:rotation="0" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player_frame"
        android:layout_width="328dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:foreground="@drawable/rectangle_player">

        <FrameLayout
            android:layout_width="268dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/player_artist_name"
                style="@style/Theme.Manya_v1"
                android:layout_width="match_parent"
                android:layout_height="26dp"

                android:gravity="center_horizontal"
                android:text="ArtistName"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/player_title_name"
                style="@style/Theme.Manya_v1"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"

                android:gravity="center_horizontal"
                android:text="TitleName"
                android:textSize="22dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="268dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dp">

            <Button
                android:id="@+id/player_prev_btn"
                style="@style/Theme.Manya_v1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:foreground="@drawable/next_btn_icon"
                android:rotation="180" />

            <Button
                android:id="@+id/player_play_btn"
                style="@style/Theme.Manya_v1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:foreground="@drawable/play_btn_icon"
                android:rotation="0" />

            <Button
                android:id="@+id/player_next_btn"
                style="@style/Theme.Manya_v1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:foreground="@drawable/next_btn_icon"
                android:rotation="0" />
        </FrameLayout>

    </FrameLayout>

</FrameLayout>

